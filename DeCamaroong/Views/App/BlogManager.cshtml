<header id="sticker" class="sticky-navigation">
    <!-- Sticky Menu -->
    <div class="sticky-menu relative">
        <!-- navbar -->
        <div id="navigation" class="navbar navbar-default navbar-bg-light" role="navigation">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="navbar-header">
                            <!-- Button For Responsive toggle -->
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <!-- Logo -->
                            <div class="top-logo-left-header"><h5>De Camaroong Residence</h5></div>

                        </div>
                        <!-- Navbar Collapse -->
                        <div id="topnav" class="navbar-collapse collapse">
                            <!-- nav -->
                            <ul class="nav navbar-nav">
                                <li><a href="#home" class="scroll">Home</a></li>
                                <li><a href="#blogmanager" class="scroll active">News</a></li>
                                <li><a href="#mail" class="scroll">Message <span class="badge">2</span></a></li>
                                <li ng-show="loggedIn">
                                    <a href="" ng-click="logout()">{{username}} | Sign Out</a>
                                </li>
                            </ul>

                           
                        </div>
                        <!-- /.navbar-collapse -->
                    </div>
                    <!-- /.col-md-12 -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container -->
        </div>
        <!-- navbar -->
    </div>
    <!-- Sticky Menu -->
</header>
<div class="alert {{type}} fade in col-md-3" id="alert-console" ng-show="isShowAlert">
    <strong>Success!</strong>
    <p ng-model="message"></p>
</div>
<div class="container">
    <div class="col-md-12 margin-top-5">
        <div class="row">
            <div class="input-group input-group-lg" style="max-width:600px;margin-left:14px;">
                <input type="text" class="form-control" placeholder="Title" ng-model="blogTitle" />
                <div class="btn btn-primary input-group-addon" ng-click="postItem()">
                    <span class="glyphicon glyphicon-plus" ng-hide="isedit"></span>
                    <span class="glyphicon glyphicon-plus" ng-show="isedit"></span>
                </div>
                <div class="btn btn-primary input-group-addon" ng-click="cancelEdit()" ng-show="isedit">
                    <span class="glyphicon glyphicon-off"></span>
                </div>
            </div>
        </div>
        <div class="row margin-top-5">
            <div class="input-group input-group-lg">
                <div text-angular ng-model="blogContent" class="col-md-12"></div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div ng-repeat="item in blogList" class="container">
                    <div class="bg-info" style="margin:10px; padding:10px; border:thick;border-radius:5px;">
                        <div class="row bg-white" style="margin:10px;">
                            <div class="col-lg-6">
                                <h4>{{item.Title}}</h4>
                                <h5>{{item.date | date:"MM/dd/yyyy 'at' h:mma"}}</h5>
                            </div>
                            <div class="col-lg-6 text-right margin-top-5">
                                <div class="btn btn-success" ng-click="select(item.ID)">
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </div>

                                <div class="btn btn-danger" ng-click="delete(item.ID)">
                                    <span class="glyphicon glyphicon-trash"></span>
                                </div>
                            </div>

                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="trim-info" ng-bind-html="item.Content"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
