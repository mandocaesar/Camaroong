<div class="container margin-top-5 margin-10" style="margin-left: auto; margin-right: auto; margin-top: 50px;">
    <div flow-init
         flow-name="obj.flow"
         flow-file-added="!!{png:1,gif:1,jpg:1,jpeg:1}[$file.getExtension()]"
         flow-files-added="processFiles($files)">
        <div class="drop" flow-drop ng-class="dropClass">
            <span class="btn btn-default" flow-btn>Upload Image</span>
            <span class="btn btn-default" flow-btn flow-directory ng-show="$flow.supportDirectory">Upload Folder of Images</span>
            <b>OR</b>
            Drag And Drop your images here
        </div>

        <br />
        <div class="row">
            <div class="col-lg-4"><span class="btn btn-success" ng-click="Save()">Save</span></div>
        </div>
        <div>
            <div ng-repeat="file in $flow.files" class="gallery-box">
                <span class="title">{{file.name}}</span>
                <div class="thumbnail" ng-show="$flow.files.length">
                    <img flow-img="file" />
                </div>

                <div class="btn-group">
                    <a class="btn btn-xs btn-danger" ng-click="file.cancel()">
                        Remove
                    </a>
                </div>
            </div>
            <div class="clear"></div>
        </div>

    </div>
</div>
<div class="container" style=" margin-top: 30px; margin-left: 50px;">
    <div class="row" style="margin-left: 200px;">
        <fieldset>
            <h4>Images</h4>
            <hr/>
            <div ng-repeat="file in galleries" class="gallery-box col-lg-3 col-md-3 col-sm-3" style="margin: 5px; ;border: solid; border-style: solid; border-width: thin;">
                <span class="title">{{file.Name}}</span>
                <div class="thumbnail">
                    <img src="{{file.Content}}" />
                </div>
                <div class="btn-group" >
                    <a class="btn btn-xs btn-danger" style="width: 100%; margin-left: auto !important; margin-bottom: 5px;" ng-click="Delete(file.ID)">
                        Remove
                    </a>
                </div>
                <div class="clear"></div>
            </div>


            @*<div class="clear"></div>*@
        </fieldset>
    </div>
</div>

