<div class="container margin-top-5 margin-10" style="margin-left: auto; margin-right: auto; margin-top: 50px;">
    <div flow-init
         flow-name="obj.flow"
         flow-file-added="!!{png:1,gif:1,jpg:1,jpeg:1}[$file.getExtension()]">
        <div class="drop" flow-drop ng-class="dropClass">
            <span class="btn btn-default" flow-btn>Upload Image</span>
            <span class="btn btn-default" flow-btn flow-directory ng-show="$flow.supportDirectory">Upload Folder of Images</span>
            <b>OR</b>
            Drag And Drop your images here
        </div>

        <br />

        <div>

            <div ng-repeat="file in $flow.files" class="gallery-box">
                <span class="title">{{file.name}}</span>
                <div class="thumbnail" ng-show="$flow.files.length">
                    <img flow-img="file" />
                </div>
                <div class="progress progress-striped" ng-class="{active: file.isUploading()}">
                    <div class="progress-bar" role="progressbar"
                         aria-valuenow="{{file.progress() * 100}}"
                         aria-valuemin="0"
                         aria-valuemax="100"
                         ng-style="{width: (file.progress() * 100) + '%'}">
                        <span class="sr-only">{{file.progress()}}% Complete</span>
                    </div>
                </div>
                <div class="btn-group">
                    <a class="btn btn-xs btn-danger" ng-click="file.cancel()">
                        Remove
                    </a>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class="container" style="; margin-top: 30px;">
        <fieldset>
            <h4>Images</h4>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="image in building.Images">
                        <td class="text-center"><img src="{{image.Content}}" width="100px" height="100px" /></td>
                        <td class="text-center"><span class="btn btn-danger" ng-click="deleteImage(building.ID, $index)"><i class="glyphicon glyphicon-trash"></i> Delete</span></td>
                    </tr>
                </tbody>
            </table>
            <div flow-init flow-name="obj.flow"
                 flow-file-added="!!{png:1,gif:1,jpg:1,jpeg:1}[$file.getExtension()]"
                 flow-files-added="processFiles($files)" style="margin-top: 50px;">
                <div class="col-lg-6">
                    <div class="drop" flow-drop ng-class="dropClass">
                        <div class="col">Drop your image here!</div>
                        <div class="col text-right"><span class="btn btn-transparent-black" style="color: white" flow-btn>Upload File</span></div>
                    </div>
                </div>
                <div class="col-lg-6" style="overflow-y: scroll; height: 100px;">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th class="text-center">ID</th>
                                <th class="text-center">File Name</th>
                                <th class="text-center">Size</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="file in $flow.files">
                                <td>{{$index+1}}</td>
                                <td>{{file.name}}</td>
                                <td>{{file.size / 1024}} Kb</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </fieldset>
    </div>

