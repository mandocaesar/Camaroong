<div class="container">
    <span class="btn btn-success" ng-click="AddNew()"><i class="glyphicon glyphicon-plus-sign"></i> Add New Building</span>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th class="text-center">Title</th>
            <th class="text-center">Land Square</th>
            <th class="text-center">Building Square</th>
            <th class="text-center">Bathroom</th>
            <th class="text-center">Bedroom</th>
            <th class="text-center">Post on</th>
            <th class="text-center">Price</th>
            <th class="text-center">Action</th>
        </tr>
        </thead>
        <tbody>
            <tr ng-repeat="x in buildings">
                <td>{{ x.Title }}</td>
                <td>{{ x.LandSquare }}</td>
                <td>{{ x.BuildingSquare }}</td>
                <td>{{ x.BathRoom }}</td>
                <td>{{ x.BedRoom }}</td>
                <td>{{ x.PostDate| date:"MM/dd/yyyy 'at' h:mma" }}</td>
                <td>{{ x.Price | currency:"Rp"}}</td>
                <td><span class="btn btn-success" ng-click="view($index)"><i class="glyphicon glyphicon-open-file"></i> View </span></td>
            </tr>
        </tbody>
    </table>
</div>

